@model IEnumerable<MVCReviewSiteProject.Models.Reviews>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-family: 'Questrial', sans-serif;">User Reviews</h2>

<p style="text-align:center; font-family: 'Questrial', sans-serif;">
    @Html.ActionLink("Create A New Review", "Create")
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="thumbnail col-md-4 colBorder" style="font-family: 'Shadows Into Light', cursive; text-align:justify; min-height: 500px">
            <div class="middle"></div>
                            <h4>
                                Location:  @Html.DisplayFor(modelItem => item.Category.Name)
                            </h4>
                            <h4>
                                Name:  @Html.DisplayFor(modelItem => item.ReviewerName)
                            </h4>
                            <h4>
                                User Location:  @Html.DisplayFor(modelItem => item.ReviewerHome)
                            </h4>
                            <h4>
                                Travel Date:  @Html.DisplayFor(modelItem => item.TravelDate)
                            </h4>
                            <h4>
                                Review Date:  @Html.DisplayFor(modelItem => item.ReviewDate)
                            </h4>
                            <h4>
                                Review:  @Html.DisplayFor(modelItem => item.Review)
                            </h4>
                            <h5 style="text-align:center; font-family: 'Questrial', sans-serif;">
                                @Html.ActionLink("Edit Review", "Edit", new { id = item.ReviewID }) |
                                @Html.ActionLink("Review Details", "Details", new { id = item.ReviewID }) |
                                @Html.ActionLink("Delete Review", "Delete", new { id = item.ReviewID })
                            </h5>

