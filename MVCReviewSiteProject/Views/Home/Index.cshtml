@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Tripology Forum</h1>
    <p class="lead">Tripology is a user-based forum where customers can provide reviews on trips they've taken to help others informed decisions on future trips.</p>
    <p><a href="http://localhost:55631/Reviews/Index" class="btn btn-primary btn-lg">Check the Reviews! &raquo;</a></p>
</div>

<div class="row" style="text-align:center;">
    <div class="col-md-4">
        <h2>Flights</h2>
        <p>Flights can get expensive. Stay alert when deals become available through our sponsor link.</p>
        <p><a class="btn btn-default" href="https://www.google.com/flights/">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Hotels</h2>
        <p>Great resource for finding a place to rest your head while away from home.</p>
        <p><a class="btn btn-default" href="https://www.hotels.com/">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Car Rentals</h2>
        <p>Wherever you go, you need to get around. If you need to rent a car, check in with our sponsors.</p>
        <p><a class="btn btn-default" href="https://www.carrentals.com/">Learn more &raquo;</a></p>
    </div>
</div>


<!--Carousel-->
<div class="container">
    <h2>Where We've Been </h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/coast.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/directionarrows.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/vwbus.png" alt="New york" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/thailand.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/hotairballoons.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/Images/London.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>